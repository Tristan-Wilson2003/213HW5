@model _213HW5.Models.MusicGenreViewModel
@{
    ViewData["Title"] = "Browse";
}

<h2>Browse Our Selection</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<form asp-controller="Musics" asp-action="Index" method="get">
    <p>

        <select asp-for="MusicGenre" asp-items="Model.Genres">
            <option value="">All</option>
        </select>

        Title: <input type="text" asp-for="SearchString" />
        <input type="submit" value="Filter" />
    </p>
</form>



<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Musics![0].Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Musics![0].ReleaseDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Musics![0].Genre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Musics![0].Price)
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Musics!)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ReleaseDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Genre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    
                </td>
            </tr>
        }
    </tbody>
</table>
